<html>
    <head>
        <style>
            @import url("https://fonts.googleapis.com/css2?family=Poppins:weight@100;200;300;400;500;600;700;800&display=swap");


body{
  background-image: url("https://images.pexels.com/photos/1881621/pexels-photo-1881621.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1");
 font-family: "Poppins", sans-serif;
 font-weight: 300;
 height:fit-content;
 display: flex;
 flex-direction: column;
 align-items: center;
 justify-content: flex-start;





 background-repeat: no-repeat;
                
                background-size: cover;





}


.profile_outer{
  height: fit-content;
  width: 50%;
  background-color: white;
  margin-top: 2rem;
  margin-bottom: 3rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  border-radius: 10px;

}

.profile_image{
  height: fit-content;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.image{
  height: 100px;
  width: 100px;
  border-radius: 50%;
}

.profile_card{
  height: fit-content;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: flex-start;
  margin-left: 5rem;
  padding: 1rem;
  font-size: 1rem;
  /* margin-bottom: 1rem; */
}

.profile_card_left{
  width: 20%;

}

.profile_pass{
  height: fit-content;
  width: 100%;
  align-items: center;
  display: flex;
  justify-content: flex-start;
  margin-left: 5rem;
  padding: 1rem;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}


.pass__field{
  width: 100%;
  
  align-items: center;
  justify-content: flex-start;
  height: fit-content;
  font-size: 1rem;
  display: flex;
}

.pass__input{
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
  border: none;
  border-bottom: 2px solid #2885BE;
}

.stats{
  height: fit-content;
  align-items: center;
  display: flex;
  justify-content: center;
  width: 100%;
  
}
.profile_change{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 90%;
  height: fit-content;


}

.button{
  width: 10rem;
  font-size: 1.2rem;
  align-items: center;
  display: flex;
  justify-content: center;
  height: fit-content;
  background-color: #2885BE;
  border-radius: 5px;
  text-decoration: none;
  border: none;
  margin-bottom: 2rem;
}

        </style>
    </head>
    <body>
      <% if(locals.err_msg) { %>
      <div class="alert alert-danger" role="alert"><%= err_msg %></div>
      <% } %>

        <div class="profile_outer">
          <div class="profile_image">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" class="image" >
          </div>
          <div class="profile_pass">
            USER PROFILE
          </div>
          <div class="profile_card">
            <div class="profile_card_left">
              Name :
            </div>
            <div class="profile_card_right">
              <%= result[0].name %>
            </div>
          </div>

          <div class="profile_card">
            <div class="profile_card_left">
             Username:
            </div>
            <div class="profile_card_right">
              <%= result[0].username %>
            </div>
          </div>
          <div class="profile_card">
            <div class="profile_card_left">
             Contact:
            </div>
            <div class="profile_card_right">
              <%= result[0].contact %>
            </div>
          </div>
          <div class="profile_card">
            <div class="profile_card_left">
             Gender:
            </div>
            <div class="profile_card_right">
              <%= result[0].gender %>
            </div>
          </div>

          <div class="profile_pass">
            CHANGE PASSWORD
          </div>

          <div class="profile_change">
            <form  action="/change-pass-form" method="POST">
              <div class="pass__field">
                  <input type="text" name="oldpass" id="oldpass" class="pass__input" placeholder="Current Password" required>
              </div>
              <div class="pass__field">
                  <input type="text" name="newpass" id="newpass" class="pass__input" placeholder="New Password" required>
                </div>
                <div class="pass__field">
                  <input type="text" name="conpass" id="conpass" class="pass__input" placeholder="Confirm Password" required>
              </div>
              <div class="stats" >
                <button  class="button" type="submit">Change Pass</button>
              </div>
            </form>
            
          </div>
          <div class="stats" >
            <a href="/" class="button" >HOME</a>
          </div>
        </div>
        

