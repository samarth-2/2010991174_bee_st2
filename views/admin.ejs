<html>
    <head>
       
       
        <style>
            body{
                background-image: url("https://wallpaperaccess.com/full/2005304.jpg");
                font-family: 'Montserrat', sans-serif;
                
                padding:1rem;
                display: flex;
                background-repeat: no-repeat;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                background-size: cover;
            }
            .admin_outer{
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                width: 80%;
                background-color:white ;
                border-radius: 10px;
                height: fit-content;
                font-size: 1 rem;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-top:2rem;
                margin-bottom: 4rem;
                padding-top: 1rem;
                padding-bottom: 1rem;
            }
            .admin_head{
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                width: 80%;
                background-color:white ;
                border-radius: 10px;
                height: fit-content;
                font-size: 2rem;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-top:1rem;
                margin-bottom: 2rem;
                padding-top: 1rem;
                padding-bottom: 1rem;
            }

            .admin_back{
                height: fit-content;
                width: 80%;
                display: flex;
                align-items: center;
                justify-content: flex-start;
            }
            .admin_back_inner{
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                width: 10%;
                background-color:white ;
                border-radius: 5px;
                height: fit-content;
                font-size: 1rem;
                display: flex;
                align-items: center;
                justify-content: center;
                margin-top:1rem;
                margin-bottom: 0.5rem;
                padding-top: 1rem;
                padding-bottom: 1rem;
            }
            .button{
                color: black;
                text-decoration: none;
            }

            .admin_body{
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                width: 90%;
                background-color:white ;
                border-radius: 5px;
                height: fit-content;
                font-size: 1rem;
                display: flex;
                align-items: center;
                justify-content: space-evenly;
                margin-top:2rem;
                margin-bottom: 0.5rem;
                padding-top: 1rem;
                padding-bottom: 1rem;
            }
        </style>
    </head>
    <body>
        <div class="admin_back">
            <div class="admin_back_inner">
                <a href="/" class="button">
                    HOME
                </a>
            </div>
            
        </div>
        <div class="admin_head">
            
            ADMIN
        </div>
        
        <% for(var i=0; i < result.length; i++) { %>
        
            <div class="admin_outer">
            <div class="admin_body">
                <div>
                    ID : <%= result[i].id %>
                </div>
                <div>
                    Name : <%= result[i].name %>
                </div>
                <div>
                    Password : <%= result[i].password %>
                </div>
                <div>
                    Username : <%= result[i].username %>
                </div>
                <div>
                    Contact : <%= result[i].contact %>
                </div>
                 <div>
                    gender : <%= result[i].gender %>
                 </div>
            </div>
            
           
           
            
        </div>
       
        
        <% } %>
        
        
    </body>
</html>